    # 使用 Node.js 官方映像
    FROM node:18-slim

    # 建立工作目錄
    WORKDIR /usr/src/app

    # 複製 package.json 和 package-lock.json
    COPY package*.json ./

    # 複製程式碼
    COPY . .

    # 安裝依賴
    RUN npm install
    RUN npm run build

    # 設定環境變數
    ENV PORT=8080
    EXPOSE 8080

    # 啟動應用
    CMD ["node", "server.js"]